<div class="modal-body">
<div class="row-fluid">
	<div class="span12">
	<!-- BEGIN EXAMPLE TABLE PORTLET-->
		<div class="portlet">
				<div class="portlet-title">
				<div class="caption"><i class="icon-globe"></i>用户列表</div>
				<div class="actions">
					<input type="button" onclick="formSubmitMember();" class="btn btn-primary" value="提交" />
						<button  class="btn yellow-stripe"  data-dismiss="modal" aria-hidden="true"> 关闭 </button>
				</div>
			</div>
			
			<div class="portlet-body">
				<div class="span12 booking-search">
				<form id="searchSub_form">
					 <div class="clearfix">
								<div class="span4">
									<label>用户名：
										<input name="username" class="form-control span7" type="text" value="${searchMap["username"]?if_exists[0]}">
									</label>
								</div>
							<div class=pull-right">
								<button type="button" class="btn yellow btn-sm" onclick="toSearchSub('${actionUrl?if_exists}', 'searchSub_form'<#if modelDivId!=''>,$('#${modelDivId}')</#if>);">搜索  <i class="icon-search m-icon-white"></i></button>
								<button type="button" class="btn yellow btn-sm" onclick="resetForm('searchSub_form');toSearchSub('${actionUrl?if_exists}', 'searchSub_form'<#if modelDivId!=''>,$('#${modelDivId}')</#if>);">重置 <i class="icon-repeat m-icon-white"></i></button>
							</div>
					  </div>
				</form>
			</div>
				<table class="table table-striped table-bordered table-hover">
					<thead>
						
							<!--<th width="20" style="text-align:center;">序号</th>-->
							<th width="20" style="text-align:center;">  <input type="checkbox" id="selectAll" onclick="selectMember()"/></th>
							<th style="text-align:center;">用户名</th>
						
					</thead>
					<tbody id="selectMemberList">
					<#if memberList?exists>
					  <#list memberList as member>
						<tr class="odd gradeX">
							<td>
								<input type="checkbox" name="memberId" username="${member.username?if_exists}" value="${member.id}"/></td>

							<td class="center">${member.username?if_exists}</td>
						</tr>
					  </#list> 
					</#if>
					</tbody>
				</table>
				<#include "/lmPage/common/pageSub.html">
			</div>
		</div>
	<!-- END EXAMPLE TABLE PORTLET-->
	</div>
</div>
</div>
<script type="text/javascript">
function selectMember(){
	$("#selectMemberList input").prop("checked",$("#selectAll").prop("checked"));
}
</script>
